<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lucien.wheelmenu" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RightActivity"
            android:label="@string/title_activity_right"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LeftActivity"
            android:label="@string/title_activity_left"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TopActivity"
            android:label="@string/title_activity_top"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".BottomActivity"
            android:label="@string/title_activity_bottom"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
